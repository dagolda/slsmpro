{% extends 'base.html.twig' %}

{% block body %}
    <h1>Prices list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td><a href="{{ path('prices_show', { 'id': price.id }) }}">{{ price.id }}</a></td>
                <td>{% if price.startdate %}{{ price.startdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if price.enddate %}{{ price.enddate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('prices_show', { 'id': price.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('prices_edit', { 'id': price.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prices_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
