{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entreprise list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Master</th>
                <th>Type</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>Phone1</th>
                <th>Phone2</th>
                <th>Mobile</th>
                <th>Datecreation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td><a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">{{ entreprise.id }}</a></td>
                <td>{{ entreprise.name }}</td>
                <td>{{ entreprise.master }}</td>
                <td>{{ entreprise.type }}</td>
                <td>{{ entreprise.address1 }}</td>
                <td>{{ entreprise.address2 }}</td>
                <td>{{ entreprise.phone1 }}</td>
                <td>{{ entreprise.phone2 }}</td>
                <td>{{ entreprise.mobile }}</td>
                <td>{% if entreprise.dateCreation %}{{ entreprise.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entreprise_edit', { 'id': entreprise.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entreprise_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
