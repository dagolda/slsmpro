{% extends 'base2.html.twig' %}
{% block title %}{{parent()}}-{{'entity.quiz'|trans([],'BoAdminBundle')}} >> {{'title.show'|trans([],'BoAdminBundle')}}{% endblock %}
{% block smenu %}{%include "BoAdminBundle:Default:admin.html.twig"%}{% endblock %}
{% block nav %}{% endblock %}
{% block label %}<h1>{{'entity.quiz'|trans([],'BoAdminBundle')}} >> {{'title.show'|trans([],'BoAdminBundle')}} >> Id {{ quiz.id }}</h1>{% endblock %}
{% block body %}
	<div id="body-content">
		{%include "BoQuizBundle:Quiz:showactions.html.twig"%}
		<h2 class="quiz">{{quiz.name}}</h2>
		{%include "BoQuizBundle:Quiz:head.html.twig"%}
		<div class="quiz_question">
			{%include "BoQuizBundle:Quiz:show.html.twig"%}
		</div>
	</div>
	<!-- begin add quiz question creation form by modal dialog-->
	<div class="container">
	  <!-- Modal -->
	  <div class="modal fade" id="add_question" role="dialog">
		<div class="modal-dialog">
		
		  <!-- Modal content-->
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			  <h4 class="modal-title">{{'action.add'|trans([],'BoAdminBundle')}} {{'label.question'|trans([],'BoAdminBundle')}}</h4>
			</div>
			<form action="{{ path('quiz_addquestion',{'idquiz':quiz.id})}}" method="post" class="style">
				<div class="modal-body">
					{{ form_errors(form) }}
						{%include "BoQuizBundle:Question:newform.html.twig"%}
					{{ form_rest(form) }}
				</div>
				<div class="modal-footer">
					<button class="close_modal_add" data-dismiss="modal">{{'action.close'|trans([],'BoAdminBundle')}}</button>
					<input type="submit" value="{{'action.create'|trans([],'BoAdminBundle')}}">
				</div>
			</form>	
		  </div>
		  
		</div>
	  </div>
	</div>

	<div class="container">
	  <!-- Modal -->
	  <div class="modal fade" id="myModal" role="dialog">
		<div class="modal-dialog">
		
		  <!-- Modal content-->
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			  <h4 class="modal-title">{{'message.alert.delete'|trans([],'BoAdminBundle')}}</h4>
			</div>
			<div class="modal-body">
			  <p>{{'message.confirm.delete'|trans([],'BoAdminBundle')}}</p>
			</div>
			<div class="modal-footer">
				{{ form_start(delete_form) }}
					<input type="submit" value="{{'action.confirm'|trans([],'BoAdminBundle')}}">
				{{ form_end(delete_form) }}
			</div>
		  </div>
		  
		</div>
	  </div>
	</div>

	<!-- begin quiz edition form by modal dialog-->
	<div class="container">
	  <!-- Modal -->
	  <div class="modal fade" id="edit_quiz" role="dialog">
		<div class="modal-dialog">
		
		  <!-- Modal content-->
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			  <h4 class="modal-title">{{'action.edit'|trans([],'BoAdminBundle')}} {{'label.quiz'|trans([],'BoAdminBundle')}}</h4>
			</div>
			<form action="{{ path('quiz_update',{'id':quiz.id})}}" method="post" class="style">
				<div class="modal-body">
					{{ form_errors(edit_form) }}
						{%include "BoQuizBundle:Quiz:editform.html.twig"%}
					{{ form_rest(edit_form) }}
				</div>
				<div class="modal-footer">
					<button class="close_modal_add" data-dismiss="modal">{{'action.close'|trans([],'BoAdminBundle')}}</button>
					<input type="submit" value="{{'action.update'|trans([],'BoAdminBundle')}}">
				</div>
			</form>	
		  </div>
		  
		</div>
	  </div>
	</div>
	<!-- end quiz edition form by modal dialog-->

	{% block javascripts %}
		<script type="text/javascript" src="{{ asset('js/vendor/bootstrap/bootstrap.min.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/vendor/jquery/jquery.min.js') }}"></script>
	{% endblock %}
{% endblock %}
