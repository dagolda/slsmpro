{% extends 'base.html.twig' %}

{% block body %}
    <h1>Invitation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invitation.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ invitation.categorie }}</td>
            </tr>
            <tr>
                <th>Studentname</th>
                <td>{{ invitation.studentname }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ invitation.status }}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ invitation.createdby }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if invitation.creationdate %}{{ invitation.creationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('invitation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('invitation_edit', { 'id': invitation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
