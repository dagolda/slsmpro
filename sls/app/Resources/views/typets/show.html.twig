{% extends 'base.html.twig' %}

{% block body %}
    <h1>Typets</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ typet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ typet.name }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if typet.creationdate %}{{ typet.creationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('typets_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('typets_edit', { 'id': typet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
