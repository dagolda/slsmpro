{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usedhour</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usedhour.id }}</td>
            </tr>
            <tr>
                <th>Ddate</th>
                <td>{% if usedhour.ddate %}{{ usedhour.ddate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hour</th>
                <td>{{ usedhour.hour }}</td>
            </tr>
            <tr>
                <th>Notif</th>
                <td>{% if usedhour.notif %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if usedhour.creationdate %}{{ usedhour.creationdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usedhour_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usedhour_edit', { 'id': usedhour.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
