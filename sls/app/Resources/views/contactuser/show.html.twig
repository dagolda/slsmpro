{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contactuser</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contactUser.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contactUser.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ contactUser.firstname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ contactUser.phone }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ contactUser.department }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contactUser.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ contactUser.password }}</td>
            </tr>
            <tr>
                <th>Createby</th>
                <td>{{ contactUser.createby }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if contactUser.creationdate %}{{ contactUser.creationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contactuser_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contactuser_edit', { 'id': contactUser.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
