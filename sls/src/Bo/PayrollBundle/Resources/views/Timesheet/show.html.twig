{% extends 'base.html.twig' %}
{% block title %}{{parent()}}- {{'entity.timesheet'|trans([],'BoAdminBundle')}} >> {{'title.show'|trans([],'BoAdminBundle')}}{% endblock %}
{% block smenu %}{%include "BoAdminBundle:Default:accounting.html.twig"%}{% endblock %}
{% block nav %}	{%if employee!=null%}{%include "BoAdminBundle:User:rightshow.html.twig"%}{%endif%}	{% endblock %}
{% block label %}<h1>{{'entity.timesheet'|trans([],'BoAdminBundle')}} >> {{'title.show'|trans([],'BoAdminBundle')}}</h1>{% endblock %}
{% block body %}
	<div id="body-content">
		{%include "BoPayrollBundle:Timesheet:showactions.html.twig"%}
		<div class="show_content">
			{%include "BoPayrollBundle:Timesheet:tbshow.html.twig"%}
		</div>		
		{%if tsv%}
			<br/>
			<div id="content-liste">
				{%include "BoAdminBundle:TsValidation:tbliste.html.twig"%}
			</div>
		{%endif%}		
	</div>
	
	<div class="container">
	  <!-- Modal -->
	  <div class="modal fade" id="myModal" role="dialog">
		<div class="modal-dialog">
		
		  <!-- Modal content-->
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			  <h4 class="modal-title">{{'message.alert.archive'|trans([],'BoAdminBundle')}}</h4>
			</div>
			<div class="modal-body">
			  <p>{{'message.confirm.archive'|trans([],'BoAdminBundle')}}</p>
			</div>
			<div class="modal-footer">
				{{ form_start(delete_form) }}
					<button class="close_modal_add" data-dismiss="modal">{{'action.close'|trans([],'BoAdminBundle')}}</button>
					<input type="submit" value="{{'action.confirm'|trans([],'BoAdminBundle')}}">
				{{ form_end(delete_form) }}
			</div>
		  </div>
		  
		</div>
	  </div>
	</div>
	
	<div class="container">
		<!-- Modal -->
		<div class="modal fade" id="edit_ts" role="dialog">
			<div class="modal-dialog">
		
				<!-- Modal content-->
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">{{'action.edit'|trans([],'BoAdminBundle')}} {{'label.timesheet'|trans([],'BoAdminBundle')}}</h4>
					</div>
					<form action="{{ path('payroll_timesheet_edit',{'id':timesheet.id}) }}" method="post" class="style">
						<div class="modal-body">
							{%include "BoPayrollBundle:Timesheet:editform.html.twig"%}
						</div>
						<div class="modal-footer">
							<button class="close_modal_add" data-dismiss="modal">{{'action.close'|trans([],'BoAdminBundle')}}</button>
							<input type="submit" value="{{'action.update'|trans([],'BoAdminBundle')}}">
						</div>
					</form>	
				</div>
		  
			</div>
		</div>
	</div>
	
	{% block javascripts %}		
		<script type="text/javascript" src="{{ asset('js/vendor/bootstrap/bootstrap.min.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/vendor/jquery/jquery.min.js') }}"></script>
	{% endblock %}
{% endblock %}
