	<div class="panel panel-default">
		<div class="panel-body">
			<table>
				<tr>
				{%if app.session.get('rights')['ACCOUNTING']['TS Validation'] is defined and app.session.get('rights')['ACCOUNTING']['TS Validation'].search==1%}	
					<td class="form-group">
						<input type="text" class="form-control" id="inp-search">
					</td>
					<td><button type="submit" id="btn-search">{{'action.search'|trans([],'BoAdminBundle')}}</button></td>
				{%endif%}
				{%if app.session.get('rights')['ACCOUNTING']['TS Validation'] is defined and app.session.get('rights')['ACCOUNTING']['TS Validation'].liste==1%}	
					<td>
						{%if type==1%}
							<a href="{{ path('payroll_contracts_group') }}">{{'label.bygroup'|trans([],'BoAdminBundle')}}</a>

							{%if today|date('D')!="Sat" and today|date('D')!="Sun"%}<a href="{{ path('payroll_contracts_gencontts') }}">{{'action.generateall'|trans([],'BoAdminBundle')}}</a>{%endif%}							
						{%else%}
							<a href="{{ path('payroll_contracts_list') }}">{{'label.bycontract'|trans([],'BoAdminBundle')}}</a>
							{%if today|date('D')!="Sat" and today|date('D')!="Sun"%}<a href="{{ path('payroll_contracts_gengroupts') }}">{{'action.generateall'|trans([],'BoAdminBundle')}}</a>{%endif%}
						{%endif%}
					</td>
					<!--td>
						<a href="{{ path('payroll_employee_index') }}">{{'label.byemployee'|trans([],'BoAdminBundle')}}</a>
					</td-->					
					<td class="total_number">
						<button type="button" class="btn btn-primary">
							Total {%if type==1%}contracts{%else%}groups{%endif%} <span class="badge">{{total|number_format(0,""," ")}}</span>
						</button>
					</td>
				{%endif%}
				</tr>
			</table>		
		</div>
	</div>	
