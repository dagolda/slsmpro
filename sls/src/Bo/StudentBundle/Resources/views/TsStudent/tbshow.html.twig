    <table class="show_table">
        <tbody>
            <tr>
				<th>{{'label.week'|trans([],'BoAdminBundle')}}</th>
				<th>{{'label.teacher'|trans([],'BoAdminBundle')}}</th>
				<th>{{'label.studentname'|trans([],'BoAdminBundle')}}</th>
				<th>{{'label.status'|trans([],'BoAdminBundle')}}</th>
            </tr>
            <tr>
                <td>{%if tsstudent.timesheet.tsweek %}{{ tsstudent.timesheet.tsweek.numberweek }} | {{ tsstudent.timesheet.ddate|date('Y') }}{%endif%}</td>
				<td>{%if tsstudent.timesheet.employee %}{{ tsstudent.timesheet.employee.firstname }} {{ tsstudent.timesheet.employee.name }}{%else%}---{%endif%}</td>
				<td>{%if tsstudent.timesheet.group %}{{ tsstudent.timesheet.group.name }}{%elseif tsstudent.timesheet.students%}{{ tsstudent.timesheet.students.firstname }} {{ tsstudent.timesheet.students.name }}{%endif%}</td>
				<td>{%if tsstudent.status and tsstudent.status==1 %}Submitted{%elseif tsstudent.status and tsstudent.status==2 %}Validated {%else %}---{%endif%}</td>
            </tr>
            </tr>
            <tr><td colspan="4">&nbsp;</td></tr>
            <tr>
                <th width="20%">{{'label.startam'|trans([],'BoAdminBundle')}}</th>
                <th width="20%">{{'label.endam'|trans([],'BoAdminBundle')}}</th>
				<th width="20%">{{'label.startpm'|trans([],'BoAdminBundle')}}</th>
				<th width="20%">{{'label.endpm'|trans([],'BoAdminBundle')}}</th>
            </tr>
            <tr>                
				<td>{{ tsstudent.timesheet.startam|date('H:i') }}</td>
                <td>{{ tsstudent.timesheet.endam|date('H:i') }}</td>
				<td>{{ tsstudent.timesheet.startpm|date('H:i') }}</td>
				<td>{{ tsstudent.timesheet.endpm|date('H:i') }}</td>
            </tr>
            <tr><td colspan="4">&nbsp;</td></tr>
            <tr>
				<th>{{'label.trainingdate'|trans([],'BoAdminBundle')}}</th>
                <th>{{'label.hour'|trans([],'BoAdminBundle')}}</th>
				<th>Legende</th>
				<th>{{'label.creationdate'|trans([],'BoAdminBundle')}}</th>
            </tr>
            <tr>
                <td>{{ tsstudent.timesheet.ddate|date('Y-m-d H:i:s') }}</td>
                <td>{{ tsstudent.timesheet.hour }} hrs</td>
                <td>{{ tsstudent.legende }}</td>
				<td>{% if tsstudent.timesheet.creationdate %}{{ tsstudent.timesheet.creationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr><td colspan="4">&nbsp;</td></tr>
        </tbody>
    </table>