	<table border="0" cellpadding="0" cellspacing="0" id="new_row">
		<tr>
			<th width="40%" class="sty_label">Employee</th>
			<th width="40%" class="sty_label">{{'label.room'|trans([],'BoAdminBundle')}}</th>
		</tr>
		<tr>
			<td>
				<select name='employee' id='employee'>
					<option value="0" selected="delected">Select a employee</option>
					{%for employee in employees%}
						<option value="{{employee.id}}" {%if idemployee is defined and employee.id ==idemployee%}selected='selected'{%endif%}>{{employee.firstname}} {{employee.name}}</option>
					{%endfor%}
				</select>	
			</td>
			<td>
				<select name='local' id='local'>
					<option value="0" selected="delected">Select a local</option>
					{%for local in locals%}
						<option value="{{local.id}}" {%if idlocal is defined and local.id ==idlocal%}selected='selected'{%endif%}>{{local.reference}} </option>
					{%endfor%}
				</select>			
			</td>		
		</tr>
	</table>