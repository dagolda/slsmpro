{% extends 'base.html.twig' %}
{% block title %}{{parent()}}- {{'entity.document'|trans([],'BoAdminBundle')}} >> {{'title.show'|trans([],'BoAdminBundle')}}{% endblock %}
{% block smenu %}{%include "BoAdminBundle:Default:admin.html.twig"%}{% endblock %}
{% block nav %}{% endblock %}
{% block label %}<h1>{{'entity.document'|trans([],'BoAdminBundle')}} {{profil.name}} >> {{'title.show'|trans([],'BoAdminBundle')}}</h1>{% endblock %}
{% block body %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ entity.categorie }}</td>
            </tr>
			{%if entity.path!=null and entity.path!=""%}
				<tr>
					<th>Pdf</th>
					<td>{{ entity.path }}</td>
				</tr>
			{%endif%}
            <tr>
                <th>Datecreation</th>
                <td>{{ entity.datecreation|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    <table class="record_actions">
		<tr class="clink">
			<td><a href="{{ path('pdf_index') }}">Retour</a>
			<td><a href="{{ path('pdf_edit', { 'id': entity.id }) }}">Modifier</a></td>
			<td>
				<form action="{{ path('admin_slider_delete', { 'id': entity.id }) }}" method="post">
					{{ form_widget(delete_form) }}
					<button type="submit">Supprimer</button>
				</form>			
			</td>
		</tr>
	</table>
{% endblock %}
